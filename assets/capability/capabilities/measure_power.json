{
  "type": "number",
  "title": {
    "en": "Power",
    "nl": "Energie"
  },
  "units": {
    "en": "W"
  },
  "desc": {
    "en": "Power in Watt (W)",
    "nl": "Vermogen in Watt (W)"
  },
  "options": {
    "isRootOfZone": {
      "type": "string",
      "default": "",
      "desc": {
        "en": "This option contains a zone identifier and indicates that this measurement is a root measurement for that zone"
      }
    }
  },
  "isGenerator": {
    "type": "boolean",
    "default": false,
    "desc": {
      "en": "This flag is used to determine whether this devices uses or generates power."
    }
  },
  "chartType": "stepLine",
  "decimals": 2,
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [
      {
        "id": "measure_power_changed",
        "title": {
          "en": "The power changed",
          "nl": "De energie is veranderd"
        },
        "tokens": [
          {
            "name": "$id",
            "title": "$title",
            "type": "$type",
            "example": 7.5
          }
        ]
      }
    ]
  }
}
